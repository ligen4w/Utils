<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerInside"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="裁剪图片"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_compressLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="图片压缩阈值（单位M）"
        android:text="1"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_aspectX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="aspectX"
        android:text="1"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_aspectY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="aspectY"
        android:text="1"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_outputX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="outputX"
        android:text="300"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_outputY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="outputY"
        android:text="300"/>
</LinearLayout>